<!DOCTYPE html>

<html>
<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <style>
    #main {
      padding-bottom: 0px;
    }
  </style>
</head>

<body>

<div class="row">
  <div class="col-xs-6">
  </div>
  <div class="col-xs-6">
    <p style="text-align: right;"><b>Balance Due from Clients: </b>
      <span>$<%= number_with_precision(balance_due_from_clients, precision: 2, delimiter: ',') %></span>
    </p>
  </div>
</div>

<div class="row">

  <div class="col-xs-6">

    <h2>Invoices</h2>

  </div>

  <%= link_to 'New Invoice', new_invoice_path,
              class:"btn btn-primary pull-right new-btn-top-right" %>  </div>

</div>
<br/>

<div class="container">

  <!-- Nav tabs -->
  <ul class="nav nav-tabs " role="tablist">
    <li class="active col-xs-3 tab-pading">
      <a href="#home" role="tab" data-toggle="tab">
        All
      </a>
    </li>
    <li class="col-xs-3 tab-pading"><a href="#profile" role="tab" data-toggle="tab">
      Paid
    </a>
    </li>
    <li class="col-xs-3 tab-pading">
      <a href="#messages" role="tab" data-toggle="tab">
        Unpaid
      </a>
    </li>
    <li class="col-xs-3 tab-pading">
      <a href="#settings" role="tab" data-toggle="tab">
        Past Due
      </a>
    </li>
  </ul>
  <!-- Tab panes -->
  <div id="tab-content" class="tab-content">
    <div class="tab-pane fade active in" id="home">
      <table class="table table-hover table-striped">
        <thead>
          <%= render 'invoices/header' %>
        </thead>

        <tbody>
        <% @invoices.each do |invoice| %>
            <%= render 'invoices/row', invoice: invoice %>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="profile">

      <table class="table table-hover table-striped">
        <thead>
          <%= render 'invoices/header' %>
        </thead>

        <tbody>
        <% @invoices.each do |invoice| %>
            <% if invoice.status=="paid" %>
                <%= render 'invoices/row', invoice: invoice %>
            <% end %>
        <% end %>

        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="messages">

      <table class="table table-hover table-striped">
        <thead>
          <%= render 'invoices/header' %>
        </thead>

        <tbody>
        <% @invoices.each do |invoice| %>
            <% if invoice.status=="unpaid" %>
                <%= render 'invoices/row', invoice: invoice %>
            <% end %>
        <% end %>

        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="settings">
      <table class="table table-hover table-striped">
        <thead>
          <%= render 'invoices/header' %>
        </thead>

        <tbody>
        <% @invoices.each do |invoice| %>
            <% if invoice.status=="past due" %>
                <%= render 'invoices/row', invoice: invoice %>
            <% end %>
        <% end %>

        </tbody>
      </table>
    </div>
  </div>

</div>

</div>
</body>
</html>


